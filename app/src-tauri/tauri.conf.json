{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "COCO Parking",
  "version": "0.1.0",
  "identifier": "com.cocoparking.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "COCO Parking",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' asset:",
        "connect-src": "ipc: http://ipc.localhost http://localhost:5173",
        "img-src": "'self' asset: data: blob:",
        "style-src": "'self' 'unsafe-inline'"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "timestampUrl": ""
    },
    "longDescription": "COCO Parking - Smart Parking Dashboard. Desktop app for parking management.",
    "shortDescription": "Smart Parking Dashboard",
    "category": "Business",
    "publisher": "COCO Parking"
  },
  "plugins": {}
}
